extends ../_layouts/base

block config
    //- Correct base url pathing for this page
    - var baseUrl = '../'
    - var webinare = site.data.webinare

block content
    +visual({image: "/images/visuals/philosophie.jpg"})
    +breadcrumb([["Home", "/"],["Instrumente", "/instrumente"]])
    +section({"class": "section--grey"})
        div(class="grid grid--align-start")
            div(class="grid__col-12 grid__col--bleed")
                +section-headline({image: "/images/section-icons/login.svg", title: "Instrumente"})
            each webinar in webinare
                div(class="grid__col-12 grid__col-sm-6")
                    +webinar-teaser({"class": "", "webinar": webinar})
