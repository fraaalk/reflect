extends ../_layouts/base

block config
    //- Correct base url pathing for this page
    - var baseUrl = '../'

block content
    +header({"visual": "http://baconmockup.com/1280/188/", "visualSize": "0 0 32 5"})
    +breadcrumb([["Home", "/"],["Newsletter", "/newsletter/"]])
    +section({"class": "section--grey"})
        div(class="grid")
            div(class="grid__col-12 grid__col--bleed")
                +section-headline({icon: "#television", title: "Newsletter Anmeldung"})
            div(class="grid__col-12")
                form(class="grid grid--justify-end form")
                    p(class="grid__col-12") Bleiben Sie auf dem laufenden und Lorem Ipsum
                    div(class="grid__col-12 grid__col-sm-6")
                        input(class="form__input", placeholder="Ihr Vorname")
                    div(class="grid__col-12 grid__col-sm-6")
                        input(class="form__input", placeholder="Ihr Nachname")
                    div(class="grid__col-12 grid__col-sm-8")
                        input(class="form__input", placeholder="Ihre E-Mail Adresse")
                    div(class="grid__col-12 grid__col-sm-4")
                        input(type="submit", class="form__submit", value="Anmelden")
    +section({"class": "section--white"})
        div(class="grid")
            div(class="grid__col-12 grid__col--bleed")
                +section-headline({icon: "#television", title: "Newsletter Abmeldung"})
            div(class="grid__col-12")
                form(class="grid grid--justify-end form")
                    p(class="grid__col-12") Sie wollen Sich von unserem Newsletter abmelden?
                    div(class="grid__col-12 grid__col-sm-8")
                        input(class="form__input", placeholder="Ihre E-Mail Adresse")
                    div(class="grid__col-12 grid__col-sm-4")
                        input(type="submit", class="form__submit", value="Abmelden")



