mixin team-teaser(spec)
    - spec = spec || {}
    - spec.class = spec.class || ""

    div(class="team-teaser #{spec.class}")&attributes(attributes)
        a(class="team-teaser__link", href=spec.link)
            div(class="grid")
                div(class="team-teaser__image grid__col-auto grid__cell")
                    img(class="team__member-image", src=spec.image)
                div(class="team-teaser__body grid__col-auto")
                    if spec.quote
                        blockquote(class="team__member-quote")= spec.quote
                    p(class="team__member-name")= spec.name
                    p(class="team__member-title")= spec.title
                    if spec.icon
                        svg(class="team-teaser__icon")
                            use(xlink:href=spec.icon)

mixin team-header(spec)
    - spec = spec || {}
    - spec.class = spec.class || ""

    div(class="team-header grid")&attributes(attributes)
        div(class="team-header__image grid__col-auto grid__cell")
            img(class="team__member-image", src=spec.image)
        div(class="team-header__body grid__col-auto")
            blockquote(class="team__member-quote")= spec.quote
            p(class="team__member-name")= spec.name
            p(class="team__member-title")= spec.title

mixin team-info(spec)
    - spec = spec || {}
    - spec.class = spec.class || ""

    div(class="team__member-info")
        h3= spec.title
        ul
            each info in spec.list
                li= info
