block config
    //- Correct base url pathing for this page
    - var baseUrl = '../_modules/'
    - var menu = site.data.footer

footer(id='footer', class='footer')&attributes({"data-footer": ""})
    div(class="footer__wrapper")
        div(class="grid")
            div(class="grid__col-12 grid__col-sm-8 grid__col-md-9")
                nav(class="footer__nav grid")
                    div(class="grid__col-12 grid__col-sm-6 grid__col-lg-3")
                        h5(class="footer__nav-headline")
                            span= site.data.footer.portfolio.title
                        ul
                            each item in site.data.footer.portfolio.items
                                li
                                    a(title=item.title, href=item.href)= item.title
                    div(class="grid__col-12 grid__col-sm-6 grid__col-lg-2")
                        h5(class="footer__nav-headline")
                            span= site.data.footer.profil.title
                        ul
                            each item in site.data.footer.profil.items
                                li
                                    a(title=item.title, href=item.href)= item.title
                    div(class="grid__col-sm-6 grid__col-lg-2 grid__col--bleed")
                        div(class="grid__col-12")
                            h5(class="footer__nav-headline")
                                span= site.data.footer.instrumente.title
                            ul
                                each item in site.data.footer.instrumente.items
                                    li
                                        a(title=item.title, href=item.href)= item.title
                        div(class="grid__col-12")
                            h5(class="footer__nav-headline")
                                span= site.data.footer.kontakt.title
                            ul
                                each item in site.data.footer.kontakt.items
                                    li
                                        a(title=item.title, href=item.href)= item.title
                    div(class="grid__col-12 grid__col-sm-6 grid__col-lg-2")
                        h5(class="footer__nav-headline")
                            span= site.data.footer.kunden.title
                        ul
                            each item in site.data.footer.kunden.items
                                li
                                    a(title=item.title, href=item.href)= item.title
                    div(class="grid__col-12 grid__col-sm-6 grid__col-lg-3")
                        h5(class="footer__nav-headline")
                            span= site.data.footer.service.title
                        ul
                            each item in site.data.footer.service.items
                                li
                                    a(title=item.title, href=item.href)= item.title
                    div(class="grid__col-12 grid__cell-footer")
                        div(class="grid grid--bleed")
                            div(class="grid__col-md-6")
                                div(class="grid__cell-footer")
                                    div(class="grid__cell")
                                        h5(class="footer__nav-headline")
                                            span Newsletter Anmeldung
                                        +form-inline({"class": "form--newsletter", "icon": "#angle-right"})
                            div(class="grid__col-lg-6 is-hidden-lg-down")
                                img(class="footer__visual", src="/images/footer__background.png")
            div(class="grid__col-12 grid__col-sm-4 grid__col-md-3")
                div(class="grid__cell u-text-center")
                    img(class="grid__cell-img", class="footer__logo", src="/images/logo--footer.png")
                    div(class='footer__address')
                        | Insheimer Stra√üe 32
                        | D-76865 Rohrbach
                        | Fon +49 6349 96 30 228
                        | Fax +49 6349 96 30 229
                        | E-Mail info@reflect-beratung.de
                div(class="grid__cell-footer")
                    div(class="grid__cell")
                        +social-links({"class": "social--footer","facebook": true, "xing": true, "googleplus": false, "linkedin": true, "twitter": true, "rss": true})
