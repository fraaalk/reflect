mixin block(spec)
    - spec = spec || {}
    - spec.class = spec.class || ""

    if spec.id
        div(id=spec.id, class="block #{spec.class}")
            if spec.title
                h3(class="block__headline")= spec.title
            block
    else
        div(class="block #{spec.class}")
            if spec.title
                h3(class="block__headline")= spec.title
            block

mixin block-headline(spec)
    - spec = spec || {}
    - spec.class = spec.class || ""

    h2(class="block__headline #{spec.class}")= spec.title


mixin block-section(spec)
    - spec = spec || {}
    - spec.class = spec.class || ""

    div(class="block__section")
        block

mixin block-sub-headline(spec)
    - spec = spec || {}
    - spec.class = spec.class || ""

    h3(class="block__sub-headline #{spec.class}")= spec.title