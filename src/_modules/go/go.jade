block config
    //- Correct base url pathing for this page
    - var baseUrl = '../'
    - var go = site.data.go

mixin go(spec)
    - spec = spec || {}
    - spec.class = spec.class || ""
    - spec.visual = spec.visual || ""
    - spec.active = spec.active || ""

    div(class="go", style="background-image: url(#{spec.visual});")&attributes({'data-go': ''})
        svg(class="go-comb #{spec.class}", xmlns="http://www.w3.org/2000/svg", viewBox="0 0 250 250")
            a(class="go-comb__center go-comb__center--open", xlink:href="#")
                path(d="M113.9,144.2h22.2l11-19.2l-11-19.2h-22.2l-11,19.2L113.9,144.2z", title="GO")
            a(class="go-comb__center go-comb__center--close", xlink:href="#")
                path(d="M113.9,144.2h22.2l11-19.2l-11-19.2h-22.2l-11,19.2L113.9,144.2z", title="X")
            each item in site.data.go
                if spec.active == item.title
                    a(class="#{item.classes} is-active", xlink:href=item.href)
                        path(d=item.path, title=item.title)
                else
                    a(class="#{item.classes}", xlink:href=item.href)
                        path(d=item.path, title=item.title)
            path(class="go-comb__inner go-comb__inner--top-left", d="M100.1,123.4l11-19.2L101,86.6l-21.2,36.8H100.1z")
            path(class="go-comb__inner go-comb__inner--bottom-left", d="M111.1,145.8l-11-19.2H79.8l21.2,36.8L111.1,145.8z")
            path(class="go-comb__inner go-comb__inner--bottom", d="M136.1,147.3h-22.2L103.7,165h42.5L136.1,147.3z")
            path(class="go-comb__inner go-comb__inner--bottom-right", d="M149.9,126.6l-11,19.2l10.1,17.6l21.2-36.8H149.9z")
            path(class="go-comb__inner go-comb__inner--top-right", d="M149,86.6l-10.1,17.6l11,19.2h20.3L149,86.6z")
            path(class="go-comb__inner go-comb__inner--top", d="M103.7,85l10.1,17.6h22.2L146.3,85H103.7z")
        block

mixin go-overlay(spec)
    - spec = spec || {}
    - spec.class = spec.class || ""
    - spec.active = spec.active || ""

    div(class="go__overlay")
        a(class="go__link go__link--prev", rel="prev", href="/kultur/")
            svg(class="go__link-icon go__link-icon--prev")
                use(xlink:href="#angle-right")
        h3(class="go__overlay-headline")= spec.title
        p(class="go__overlay-text")= spec.text
        nav(class="go__overlay-indicators")
            each item, index in site.data.go
                if spec.active == item.title
                    a(class="is-active", href=item.href, title=item.title) •
                else
                    a(href=item.href, title=item.title) •
        a(class="go__link go__link--next", rel="next" href="/beziehungen/")
            svg(class="go__link-icon go__link-icon--next")
                use(xlink:href="#angle-right")