block config
    //- Correct base url pathing for this page
    - var baseUrl = '../'

mixin deck(spec)
    -spec = spec || ''

    div(class="deck")&attributes({'data-deck': ''})

mixin deck-stage(spec)
    - spec = spec || {}
    - spec.class = spec.class || ''

    div(class="deck__stage")
        block

mixin deck-controls(spec)
    - spec = spec || {}
    - spec.class = spec.class || ''

    nav(class="deck__controls")
        button(class="deck__button deck__button--prev") 
            svg(class="deck__button-icon deck__button-icon--prev")
                use(xlink:href="#angle-right")
        button(class="deck__button deck__button--next")
            svg(class="deck__button-icon deck__button-icon--next")
                use(xlink:href="#angle-right")

mixin deck-card(spec)
    - spec = spec || {}
    - spec.__class = spec.__class || ''

    div(class="deck__card")
        block

